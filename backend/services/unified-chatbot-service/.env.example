# =====================================================
# UNIFIED CHATBOT SERVICE - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# =====================================================

# Server Configuration
PORT=3020
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.7

# Rasa Configuration
RASA_SERVER_URL=http://localhost:5005
RASA_ACTIONS_URL=http://localhost:5055
RASA_TIMEOUT=10000
RASA_RETRY_ATTEMPTS=3

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
CACHE_CHECK_PERIOD=600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_SKIP_SUCCESS=true

# Session Management
SESSION_EXPIRATION_MINUTES=60
SESSION_CLEANUP_INTERVAL=15
MAX_CONCURRENT_SESSIONS=100

# PayOS Configuration (for payment integration)
PAYOS_CLIENT_ID=your-payos-client-id
PAYOS_API_KEY=your-payos-api-key
PAYOS_CHECKSUM_KEY=your-payos-checksum-key

# EmailJS Configuration (for notifications)
EMAILJS_SERVICE_ID=your-emailjs-service-id
EMAILJS_TEMPLATE_ID=your-emailjs-template-id
EMAILJS_USER_ID=your-emailjs-user-id

# Frontend URL (for payment redirects)
FRONTEND_URL=http://localhost:3000

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
LOG_LEVEL=info
